<h1>New Post</h1>
<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="errors">
        <h2><%= pluralize(@post.errors.count, "error") %> encountered, please check your input.</h2>

        <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
  <% end %>
 <div>
    <%= f.text_field :title %>
 </div>
 <div>
    <%= f.text_area :body %>
 </div>

  <%= f.submit %>
<% end %>
